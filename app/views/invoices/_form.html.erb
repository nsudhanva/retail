<%= nested_form_for(invoice) do |f| %>
  <% if invoice.errors.any? %>
    <div class="alert">
      <div class="row">
        <div class="col s12">
          <div class="card-panel red">
            <span class="white-text">         
              <div id="error_explanation">
                <h6><%= pluralize(invoice.errors.count, "error") %> prohibited this invoice from being saved:</h6>

                <ul>
                <% invoice.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
                </ul>
              </div>
            </span>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :client_id %>
    <%= f.collection_select :client_id, Client.all, :id, :first_name, prompt: "Select Client" %>
  </div>

  <div class="field">
    <%= f.label :client_email %>
    <%= f.text_field :client_email %>
  </div>

  <%= f.fields_for :products do |product| %>
      <label>Select Products: </label>
      <%= product.collection_select :invoice_product_ids, Product.all , :id, :name, prompt: "Select Product" %> <br><br>
      <%= product.link_to_remove "Remove this task" %>
  <% end %>
  <p><%= f.link_to_add "Add a product", :products %></p>

  <div class="field">
    <%= f.label :billing_address %>
    <%= f.text_area :billing_address %>
  </div>

  <div class="field">
    <%= f.label :invoice_date %>
    <%= f.date_select :invoice_date %>
  </div>

  <div class="field">
    <%= f.label :due_date %>
    <%= f.date_select :due_date %>
  </div>

  <div class="field">
    <%= f.label :tax_type %>
    <%= f.text_field :tax_type %>
  </div>

  <div class="field">
    <%= f.label :message %>
    <%= f.text_area :message %>
  </div>

  <div class="field">
    <%= f.label :statement %>
    <%= f.text_area :statement %>
  </div>

  <div class="field">
    <%= f.label :discount_type %>
    <%= f.text_field :discount_type %>
  </div>

  <div class="field">
    <%= f.label :discount %>
    <%= f.text_field :discount %>
  </div>

  <div class="field">
    <%= f.label :attachment %>
    <%= f.text_field :attachment %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<script type="text/javascript">
  $(document).ready(function(){    
    $("#invoice_client_id").change(function() {
      var data = "invoice=" + $( "#invoice_client_id" ).val();
      $.ajax({
        url: "/clients/get_client",
        data: data,
        method: "get",
        dataType: 'json',
        statusCode: {
          200: function(res){
            // console.log(res.email);
            $("#invoice_client_email").val(res.email);
            $("#invoice_billing_address").val(res.b_address);
          }
        }
      });
    });
  });
</script>