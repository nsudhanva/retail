<p id="notice"><%= notice %></p>

<h1>Clients</h1>

<table class="responsive-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Code</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Shipping address</th>
      <th>Billing address</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Destroy</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= client.code %></td>
        <td><%= client.email %></td>
        <td><%= client.phone %></td>
        <td><%= client.s_address %></td>
        <td><%= client.b_address %></td>
        <td><%= link_to 'Show', client %></td>
        <td><%= link_to 'Edit', edit_client_path(client) %></td>
        <td><%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

