<p id="notice"><%= notice %></p>

<h1>Vendors</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Code</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Address</th>
      <th>Pan</th>
      <th>Account no</th>
      <th>Opening balance</th>
      <th>Website</th>
      <th>Tax reg no</th>
      <th>Tax reg date</th>
      <th>Tds</th>
      <th>Entity</th>
      <th>Section</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vendors.each do |vendor| %>
      <tr>
        <td><%= vendor.name %></td>
        <td><%= vendor.code %></td>
        <td><%= vendor.email %></td>
        <td><%= vendor.phone %></td>
        <td><%= vendor.address %></td>
        <td><%= vendor.pan %></td>
        <td><%= vendor.account_no %></td>
        <td><%= vendor.opening_balance %></td>
        <td><%= vendor.website %></td>
        <td><%= vendor.tax_reg_no %></td>
        <td><%= vendor.tax_reg_date %></td>
        <td><%= vendor.tds %></td>
        <td><%= vendor.entity %></td>
        <td><%= vendor.section %></td>
        <td><%= link_to 'Show', vendor %></td>
        <td><%= link_to 'Edit', edit_vendor_path(vendor) %></td>
        <td><%= link_to 'Destroy', vendor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

